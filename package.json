{
  "name": "questmind",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "start:beta": "ng serve --configuration beta",
    "start:backend:functions": "firebase emulators:start --only functions",
    "prebuild": "node scripts/set-version.js",
    "build": "ng build",
    "build:dev": "ng build --configuration development",
    "build:beta": "ng build --configuration beta",
    "build:backend": "cd functions && tsc",
    "build:backend:watch": "cd functions && tsc --watch",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "generate:icons": "node scripts/generate-icons.js",
    "sentry:sourcemaps": "sentry-cli releases files $npm_package_version upload-sourcemaps ./dist/questmind/browser --rewrite",
    "deploy:prod": "npm run build && npm run sentry:sourcemaps",
    "deploy:beta": "npm run build:beta && npx firebase-tools deploy --project questmind-beta",
    "lint": "ng lint"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^21.1.3",
    "@angular/cdk": "^21.1.3",
    "@angular/common": "^21.1.3",
    "@angular/compiler": "^21.1.3",
    "@angular/core": "^21.1.3",
    "@angular/forms": "^21.1.3",
    "@angular/material": "^21.1.3",
    "@angular/platform-browser": "^21.1.3",
    "@angular/router": "^21.1.3",
    "@angular/service-worker": "^21.1.3",
    "@breezystack/lamejs": "^1.2.7",
    "@sentry/angular": "^10.38.0",
    "@tailwindcss/typography": "^0.5.19",
    "firebase": "^12.9.0",
    "lucide-angular": "^0.563.0",
    "marked": "^17.0.1",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@angular/build": "^21.1.3",
    "@angular/cli": "^21.1.3",
    "@angular/compiler-cli": "^21.1.3",
    "@angular/language-server": "^21.1.5",
    "@sentry/cli": "^3.2.0",
    "@tailwindcss/postcss": "^4.1.18",
    "angular-eslint": "21.2.0",
    "autoprefixer": "^10.4.24",
    "eslint": "^9.39.2",
    "jsdom": "^28.1.0",
    "postcss": "^8.5.6",
    "sharp": "^0.34.5",
    "tailwindcss": "^4.1.18",
    "typescript": "~5.9.2",
    "typescript-eslint": "8.50.1",
    "typescript-language-server": "^5.1.3",
    "vitest": "^4.0.18"
  }
}
